#!/usr/bin/env luajit

-- Init
require"mad.core.init"

-- Handle args
local options = require"mad.core.options"
options.process(arg)

-- Do tests if applicable
if options.utest then
	require"mad.core.unitTest"(options.utest)
end

-- Exec
require"mad.core.exec"(options)

-- Fini
require"mad.core.fini"(options)
